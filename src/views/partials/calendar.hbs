<fieldset id="selection-options">
  <legend>Calendar view options</legend>
  <div class="options-container row">
    <div class="meeting-duration col mb-2">
      <div class="option-name">Duration (mins)</div>

      <div class="btn-group" role="group" aria-label="Meeting duration">
        {{#loop "10, 15, 30, 60"}}
          <input
            type="radio"
            class="btn-check"
            name="duration"
            value="{{val}}"
            id="dur-{{val}}"
            {{checked val "60"}}
          />
          <label class="btn" for="dur-{{val}}">{{val}}</label>
        {{/loop}}
      </div>
    </div>

    <div class="week-month-display col mb-2">
      <div class="option-name">Display</div>

      <div class="btn-group" role="group" aria-label="Week or Month Display">
        <input
          type="radio"
          class="btn-check"
          name="display"
          id="week"
          checked
        />
        <label class="btn" for="week">Week</label>

        <input type="radio" class="btn-check" name="display" id="month" />
        <label class="btn" for="month">Month</label>

      </div>
    </div>

    <div class="cal-navigation col mb-2">
      <div class="option-name">Jump to</div>

      <div class="btn-group" role="group" aria-label="Calendar Navigation">
        <button type="button" class="btn prev">
          <i class="bi bi-chevron-left"></i>
        </button>
        <button type="button" class="btn btn-primary prev">
          <span class="current-window">Dec 10 - 16</span></button>
        <button type="button" class="btn prev">
          <i class="bi bi-chevron-right"></i>
        </button>

      </div>
    </div>
  </div>
  <p class="help-text">Click on the time slots below to select your preferred
    times. Click and drag to select multiple slots. Click on a selected slot to
    remove it.</p>
</fieldset>

<div id="calendar">

  <div id="cal-placeholder">
    <div class="placeholder-glow row">
      {{#loop 7}}
        <div class="placeholder col"></div>
      {{/loop}}
    </div>
    <div class="placeholder-glow row">
      <div class="placeholder col-12"></div>
    </div>
  </div>
  <div id="calendar-header" class="row"></div>
  <div id="calendar-body"></div>

</div>